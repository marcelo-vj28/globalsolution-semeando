@model Semeando.Models.PerguntaModel
@{
    ViewData["EditarPergunta"] = "Editar Pergunta";
}
<div class="edit-container">
    <h2>Editar Pergunta</h2>
    <form method="post" action="/Edicao/Pergunta">
        <div class="form-group">
            <label for="IdPergunta">ID da Pergunta</label>
            <input type="number" id="IdPergunta" name="IdPergunta" class="form-control" value="@Model.IdPergunta" required />
        </div>
        <div class="form-group">
            <label for="IdLevel">Level</label>
            <select id="IdLevel" name="IdLevel" class="form-control" required>
                @foreach (var level in ViewBag.Levels)
                {
                    <option value="@level.IdLevel" selected="@(Model.IdLevel == level.IdLevel)">
                        @level.Titulo
                    </option>
                }
            </select>
        </div>
        <div class="form-group">
            <label for="Texto">Texto da Pergunta</label>
            <textarea id="Texto" name="Texto" class="form-control" required>@Model.Texto</textarea>
        </div>
        <div class="form-group">
            <label for="TipoPergunta">Tipo da Pergunta</label>
            <input type="text" id="TipoPergunta" name="TipoPergunta" class="form-control" value="@Model.TipoPergunta" required />
        </div>
        <div class="button-group">
            <button type="submit" class="btn-primary">Salvar Alterações</button>
            <a href="/Consulta/Pergunta" class="btn-secondary">Cancelar</a>
        </div>
    </form>
</div>